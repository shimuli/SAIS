@model GenderDto

@{
    bool? isEditing = false;

    if (Model != null)
    {
        isEditing = Model.IsEditing;
    }
}
<div class="modal-header">
    <h5 class="modal-title">Create Gender</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">

    <form asp-action="CreateGender" method="post">
        <input asp-for="Id" hidden />
        <input asp-for="IsEditing" value="@isEditing" hidden />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <label class="col-form-label-sm">Gender Name</label>
                <input id="name" class="form-control form-control-sm rounded-0" type="text" asp-for="Value">
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

        </div>

        <div class="modal-footer">
            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
                <button type="button" class="btn btn-sm btn-soft-primary" data-bs-dismiss="modal">Cancel</button>

            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}