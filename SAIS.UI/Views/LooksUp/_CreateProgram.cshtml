@model ProgrammeDto

@{
    bool? isEditing = false;

    if (Model != null)
    {
        isEditing = Model.IsEditing;
    }
}
<div class="modal-header">
    <h5 class="modal-title">Create Program</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<div class="modal-body">

    <form asp-action="CreateProgram" method="post">
        <input asp-for="ProgrammeId" hidden />
        <input asp-for="IsEditing" value="@isEditing" hidden />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <label class="col-form-label-sm">program Name</label>
                <input id="programname" class="form-control form-control-sm rounded-0" type="text" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

        </div>

        <div class="modal-footer">
            <div class="mt-3 text-end">
                <button type="submit" class="btn btn-sm btn-primary">Save</button>
                <button type="button" class="btn btn-sm btn-soft-primary" data-bs-dismiss="modal">Cancel</button>

            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}