@model IEnumerable<Applicant>
@{
    ViewData["Title"] = "Home";
}


<div class="container-fluid">

    <h1 class="h3 mb-2 text-gray-800">Applications</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div>
                <div class="text-right">
                    <a 
                    class="btn btn-sm btn-primary waves-effect waves-light"
                    asp-action="Create">
                        <i class="fa fa-file-text-o"></i> Create
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Id Number</th>
                            <th>DOB</th>
                            <th>Marital Status</th>
                            <th>Gender</th>
                            <th>Phone Number</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var data in Model)
                        {
                            <tr>
                                <td>@data.FirstName @data.LastName</td>
                                <td>@data.IDNumber</td>
                                <td>@data.DateOfBirth.ToString("dd-MM-yyyy")</td>
                                <td>@data?.MaritalStatus?.Value</td>
                                <td>@data?.Gender?.Value</td>
                                <td>@data?.PhoneNumbers?.FirstOrDefault()?.Number</td>
                                <td>@data?.ApplicationDate.ToString("dd-MM-yyyy")</td>
                                <td>@data?.FormStatus</td>
                        
                            </tr>
                        }
                       

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

